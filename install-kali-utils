###################################
### Pre-Installation Depends
###################################

ostype=$(uname -r)

case $ostype in
	*"-generic")
        ### Linux Mint / Ubuntu
        apt-get update
        # wget http://mirrors.kernel.org/ubuntu/pool/universe/d/dconf-editor/dconf-editor_3.18.2-1_amd64.deb
        # wget http://mirrors.kernel.org/ubuntu/pool/main/g/gtksourceview3/gir1.2-gtksource-3.0_3.18.2-1_amd64.deb
        # wget http://mirrors.kernel.org/ubuntu/pool/main/w/webkit2gtk/gir1.2-javascriptcoregtk-4.0_2.10.9-1ubuntu1_amd64.deb
        # wget http://mirrors.kernel.org/ubuntu/pool/main/w/webkit2gtk/gir1.2-webkit2-4.0_2.10.9-1ubuntu1_amd64.deb
        # dpkg -i dconf-editor_*.deb
        # dpkg -i gir1.2-gtksource-3.0_*.deb
        # dpkg -i gir1.2-javascriptcoregtk-4.0_*.deb
        # dpkg -i gir1.2-webkit2-4.0_*.deb
        # apt-get -f install
        # rm dconf-editor_*.deb
        # rm gir1.2-gtksource-3.0_*.deb
        # apt-get -t xenial install dconf-editor
        # apt-get -t xenial install gir1.2-webkit2-4.0
        apt-get install dconf-editor
        apt-get install gir1.2-webkit2-4.0
        if [ "$INST_WINE" == "True" ]; then
            mv /etc/apt/apt.conf ~/
            rm /var/lib/apt/lists/*
            dpkg --add-architecture i386
            add-apt-repository ppa:wine/wine-builds
            apt-get update
            apt-get install --install-recommends winehq-devel -y
            mv ~/apt.conf /etc/apt/
        fi
	;;
	*"-amd64"|*"-686")
        ### LMDE / Debian
        apt-get update
        wget http://ftp.gnome.org/mirror/cdimage/snapshot/Debian/pool/main/d/dconf-editor/dconf-editor_3.18.2-1_amd64.deb
        wget http://ftp.gnome.org/mirror/cdimage/snapshot/Debian/pool/main/g/gtksourceview3/gir1.2-gtksource-3.0_3.18.2-1_amd64.deb
        dpkg -i dconf-editor_*.deb
        dpkg -i gir1.2-gtksource-3.0_*.deb
        apt-get -f install
        rm dconf-editor_*.deb
        rm gir1.2-gtksource-3.0_*.deb
        if [ "$INST_WINE" == "True" ]; then
            mv /etc/apt/apt.conf ~/
            rm /var/lib/apt/lists/*
            dpkg --add-architecture i386
            wget https://dl.winehq.org/wine-builds/Release.key
            apt-key add Release.key
            sh -c 'echo "deb http://dl.winehq.org/wine-builds/debian sid main" >> /etc/apt/sources.list.d/wine-official.list'
            apt-get update
            apt-get install --install-recommends winehq-devel -y
            mv ~/apt.conf /etc/apt/
        fi
	;;
esac

###################################
### Install classicmenu indicator
### for MATE & Cinnamon
###################################
case $ostype in
	*"-generic")
        ### Linux Mint / Ubuntu
        if [ "$INST_CLASSICMENU" == "True" ]; then
            apt-get install classicmenu-indicator -y
        fi
	;;
	*"-amd64"|*"-686")
        ### LMDE / Debian
        if [ "$INST_CLASSICMENU" == "True" ]; then
            wget http://mirrors.kernel.org/ubuntu/pool/universe/c/classicmenu-indicator/classicmenu-indicator_0.10.1-0ubuntu1_all.deb
            dpkg -i classicmenu-indicator_*.deb
            apt-get -f install -y
            rm classicmenu-indicator_*.deb
        fi
	;;
esac

###################################
### GTK 3.18 Hold
###################################

### XFCE
if [ -f "/etc/xdg/menus/xfce-applications.menu" ]; then
    echo adwaita-icon-theme hold | dpkg --set-selections
    echo gsettings-desktop-schemas hold | dpkg --set-selections
    echo gir1.2-gtk-3.0 hold | dpkg --set-selections
    echo libgtk-3-bin hold | dpkg --set-selections
    echo libgtk-3-0 hold | dpkg --set-selections
    echo libgtk-3-common hold | dpkg --set-selections
    echo libgtkmm-3.0-1v5 hold | dpkg --set-selections
    echo libgtksourceview-3.0-1 hold | dpkg --set-selections
    echo libgtksourceview-3.0-common hold | dpkg --set-selections
    echo libvte-2.91-common hold | dpkg --set-selections
    echo libvte-2.91-0 hold | dpkg --set-selections
    echo gir1.2-vte-2.91 hold | dpkg --set-selections
    echo libnautilus-extension1a hold | dpkg --set-selections
    echo libclutter-gtk-1.0-0 hold | dpkg --set-selections
    echo libjavascriptcoregtk-4.0-18 hold | dpkg --set-selections
    echo libwebkit2gtk-4.0-37 hold | dpkg --set-selections
    echo zenity hold | dpkg --set-selections
    echo zenity-common hold | dpkg --set-selections
fi
### Mate
if [ -f "/etc/xdg/menus/mate-applications.menu" ]; then
    echo adwaita-icon-theme hold | dpkg --set-selections
    echo gir1.2-gtk-3.0 hold | dpkg --set-selections
    echo libgtk-3-bin hold | dpkg --set-selections
    echo libgtk-3-0 hold | dpkg --set-selections
    echo libgtk-3-common hold | dpkg --set-selections
    echo libgtksourceview-3.0-1 hold | dpkg --set-selections
    echo libgtksourceview-3.0-common hold | dpkg --set-selections
    echo libvte-2.91-common hold | dpkg --set-selections
    echo libvte-2.91-0 hold | dpkg --set-selections
    echo gir1.2-vte-2.91 hold | dpkg --set-selections
    echo libnautilus-extension1a hold | dpkg --set-selections
    echo libclutter-gtk-1.0-0 hold | dpkg --set-selections
    echo gnome-desktop3-data hold | dpkg --set-selections
    echo libgnome-desktop-3-12 hold | dpkg --set-selections
    echo gsettings-desktop-schemas hold | dpkg --set-selections
    echo libgck-1-0 hold | dpkg --set-selections
    echo libgcr-3-common hold | dpkg --set-selections
