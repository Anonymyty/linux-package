###################################
### Add kali linux repositories
###################################
rm -rf /etc/apt/sources.list.d/kali-official.list
sh -c 'echo "deb http://http.kali.org/kali kali-rolling main contrib non-free" >> /etc/apt/sources.list.d/kali-official.list'
sh -c 'echo "deb http://repo.kali.org/kali kali-bleeding-edge main" >> /etc/apt/sources.list.d/kali-official.list'
# sources
# sh -c 'echo "deb-src http://http.kali.org/kali kali-rolling main contrib non-free" >> /etc/apt/sources.list.d/kali-official.list'

# apt-key adv --keyserver pgp.mit.edu --recv-keys ED444FF07D8D0BF6
wget http://http.kali.org/kali/pool/main/k/kali-archive-keyring/kali-archive-keyring_2015.2_all.deb
dpkg -i kali-archive-keyring_*.deb
rm kali-archive-keyring_*.deb
rm /var/lib/apt/lists/*
# apt-get update -m
apt-get update


###################################
### Kali Linux base system
###################################
# apt-get install busybox
# apt-get install kali-linux

###################################
### ALL Packages Extra
### Meta Packages : kali-linux-all
###################################

if [ "$INST_KALI_ALL_EXTRA" == "True" ]; then
    apt-get install $KALI_LINUX_FULL $KALI_LINUX_FORENSIC $KALI_LINUX_GPU $KALI_LINUX_PWTOOLS $KALI_LINUX_RFID $KALI_LINUX_SDR $KALI_LINUX_TOP10 $KALI_LINUX_VOIP $KALI_LINUX_WEB $KALI_LINUX_WIRELESS $KALI_LINUX_EXTRA

    if [ "$INST_WINE" == "True" ]; then
        apt-get install shellter
        apt-get install veil-catapult veil-evasion
    fi
fi

###################################
### Kali Linux complete system
### Meta Packages : kali-linux-full
###################################

if [ "$INST_KALI_FULL" == "True" ]; then
    apt-get install $KALI_LINUX_FULL

    if [ "$INST_WINE" == "True" ]; then
        apt-get install ollydbg
        apt-get install regripper
        apt-get install sqldict
    fi
fi

###################################
### Kali Linux forensic tools
### Meta Packages : kali-linux-forensic
###################################

if [ "$INST_KALI_FORENSIC" == "True" ]; then
    apt-get install $KALI_LINUX_FORENSIC

    if [ "$INST_WINE" == "True" ]; then
        apt-get install ollydbg
        apt-get install regripper
    fi
fi

###################################
### Kali Linux GPU tools
### Meta Packages : kali-linux-gpu
###################################

if [ "$INST_KALI_GPU" == "True" ]; then
    apt-get install $KALI_LINUX_GPU
fi

###################################
### Kali Linux password cracking tools
### Meta Packages : kali-linux-pwtools
###################################

if [ "$INST_KALI_PWTOOLS" == "True" ]; then
    apt-get install $KALI_LINUX_PWTOOLS $KALI_LINUX_GPU

    if [ "$INST_WINE" == "True" ]; then
        apt-get install sqldict
    fi
fi

###################################
### Kali Linux RFID tools
### Meta Packages : kali-linux-rfid
###################################

if [ "$INST_KALI_RFID" == "True" ]; then
    apt-get install $KALI_LINUX_RFID
