if [ -f "/etc/xdg/menus/cinnamon-applications.menu" ]; then
    echo adwaita-icon-theme hold | dpkg --set-selections
    echo gir1.2-gtk-3.0 hold | dpkg --set-selections
    echo libgail-3-0 hold | dpkg --set-selections
    echo libgtk-3-0 hold | dpkg --set-selections
    echo libgtk-3-bin hold | dpkg --set-selections
    echo libgtk-3-common hold | dpkg --set-selections
    echo gir1.2-gdesktopenums-3.0 hold | dpkg --set-selections
    echo gsettings-desktop-schemas hold | dpkg --set-selections
    echo gir1.2-gnomedesktop-3.0 hold | dpkg --set-selections
    echo gnome-desktop3-data hold | dpkg --set-selections
    echo libgnome-desktop-3-12 hold | dpkg --set-selections
    echo nautilus-data hold | dpkg --set-selections
    echo libnautilus-extension1a hold | dpkg --set-selections
    echo gnome-terminal hold | dpkg --set-selections
    echo gnome-terminal-data hold | dpkg --set-selections
    echo gnome-settings-daemon hold | dpkg --set-selections
    echo gnome-settings-daemon-schemas hold | dpkg --set-selections
    echo libgeocode-glib0 hold | dpkg --set-selections
    echo evolution-data-server-common hold | dpkg --set-selections
    echo libcamel-1.2-54 hold | dpkg --set-selections
    echo libebackend-1.2-10 hold | dpkg --set-selections
    echo libebook-1.2-16 hold | dpkg --set-selections
    echo libebook-contacts-1.2-2 hold | dpkg --set-selections
    echo libedata-book-1.2-25 hold | dpkg --set-selections
    echo libedataserver-1.2-21 hold | dpkg --set-selections
    echo libgtksourceview-3.0-1 hold | dpkg --set-selections
    echo libgtksourceview-3.0-common hold | dpkg --set-selections
    echo libgweather-3-6 hold | dpkg --set-selections
    echo libgweather-common hold | dpkg --set-selections
    echo metacity hold | dpkg --set-selections
    echo metacity-common hold | dpkg --set-selections
    echo libmetacity-private3a hold | dpkg --set-selections
    echo zenity hold | dpkg --set-selections
    echo zenity-common hold | dpkg --set-selections
